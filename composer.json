{
    "name": "symfony/skeleton",
    "type": "project",
    "license": "MIT",
    "description": "A minimal Symfony project recommended to create bare bones applications",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.5.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^4.4.1",
        "doctrine/doctrine-bundle": "^3.2.2",
        "doctrine/doctrine-migrations-bundle": "^4",
        "doctrine/orm": "^3.6.2",
        "endroid/qr-code-bundle": "^6.1",
        "hwi/oauth-bundle": "^2.5",
        "phpdocumentor/reflection-docblock": "^5.6.6",
        "phpstan/phpdoc-parser": "^2.3.2",
        "symfony/asset": "8.0.*",
        "symfony/asset-mapper": "8.0.*",
        "symfony/console": "8.0.*",
        "symfony/dotenv": "8.0.*",
        "symfony/expression-language": "8.0.*",
        "symfony/flex": "^2.10",
        "symfony/form": "8.0.*",
        "symfony/framework-bundle": "8.0.*",
        "symfony/http-client": "8.0.*",
        "symfony/intl": "8.0.*",
        "symfony/mailer": "8.0.*",
        "symfony/mime": "8.0.*",
        "symfony/monolog-bundle": "^4.0.1",
        "symfony/process": "8.0.*",
        "symfony/property-access": "8.0.*",
        "symfony/property-info": "8.0.*",
        "symfony/runtime": "8.0.*",
        "symfony/security-bundle": "8.0.*",
        "symfony/serializer": "8.0.*",
        "symfony/stimulus-bundle": "^2.32",
        "symfony/string": "8.0.*",
        "symfony/translation": "8.0.*",
        "symfony/twig-bundle": "8.0.*",
        "symfony/uid": "8.0.*",
        "symfony/ux-turbo": "^2.32",
        "symfony/validator": "8.0.*",
        "symfony/web-link": "8.0.*",
        "symfony/yaml": "8.0.*",
        "twig/extra-bundle": "^3.23",
        "twig/twig": "^3.23",
        "webmozart/assert": "^2.1.5"
    },
    "config": {
        "allow-plugins": {
            "endroid/installer": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*",
        "symfony/polyfill-php85": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "@composer-validate",
            "@lint-yaml",
            "@lint-container",
            "@lint-twig",
            "@php-cs-fixer",
            "@phpstan",
            "@doctrine-migrations",
            "@doctrine-schema-validate",
            "@rector",
            "@security-check"
        ],
        "composer-validate": "composer validate --strict --no-check-publish",
        "lint-yaml": "bin/console lint:yaml --parse-tags *.yaml config/ tests/",
        "lint-container": "bin/console lint:container",
        "lint-twig": "bin/console lint:twig --show-deprecations templates/",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --dry-run --using-cache=no --ansi --diff",
        "phpstan": [
            "APP_DEBUG=1 bin/console cache:clear -e dev",
            "vendor/bin/phpstan analyse --ansi --memory-limit 256M"
        ],
        "doctrine-migrations": [
            "bin/console doctrine:migrations:migrate --no-interaction",
            "bin/console doctrine:migrations:migrate --no-interaction first",
            "bin/console doctrine:migrations:migrate --no-interaction"
        ],
        "doctrine-schema-validate": [
            "bin/console doctrine:migrations:migrate --no-interaction",
            "bin/console doctrine:schema:validate"
        ],
        "rector": "vendor/bin/rector process src --dry-run",
        "security-check": [
            "composer audit --locked --no-dev",
            "bin/console importmap:audit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "8.0.*",
            "docker": true
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.94.2",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.40",
        "phpstan/phpstan-deprecation-rules": "^2.0.4",
        "phpstan/phpstan-doctrine": "^2.0.17",
        "phpstan/phpstan-symfony": "^2.0.14",
        "phpunit/phpunit": "^13.0.5",
        "rector/rector": "^2.3.8",
        "symfony/browser-kit": "8.0.*",
        "symfony/css-selector": "8.0.*",
        "symfony/debug-bundle": "8.0.*",
        "symfony/maker-bundle": "^1.66.0",
        "symfony/stopwatch": "8.0.*",
        "symfony/web-profiler-bundle": "8.0.*"
    }
}
